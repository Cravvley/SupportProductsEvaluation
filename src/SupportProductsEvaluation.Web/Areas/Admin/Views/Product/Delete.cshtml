@model SupportProductsEvaluation.Infrastructure.DTOs.ProductDto

@{
    ViewData["Title"] = "product shop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h1 class="text-info mb-5">Delete Product</h1>
<br />

<form method="post" asp-action="Delete">
    <div class="col-12">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ShopId" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Shop.Name" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CategoryId" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Category.Name" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="SubCategoryId" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="SubCategory.Name" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 mt-5 offset-2">
                <partial name="_DeleteAndBackToListButton" model="Model.Id" />
            </div>
        </div>
    </div>
</form>
