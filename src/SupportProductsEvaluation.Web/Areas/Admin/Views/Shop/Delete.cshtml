@model Shop

@{
    ViewData["Title"] = "Delete shop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h1 class="text-danger mb-5">Delete Shop</h1>
<br />

<form method="post" asp-action="Delete">
    <div class="col-12 font-weight-bold text-info">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label">Shop name:</label>
            </div>
            <div class="col-5">
                <input asp-for="Name" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="City" class="col-form-label">Shop city location:</label>
            </div>
            <div class="col-5">
                <input asp-for="City" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="PostalCode" class="col-form-label">Shop postal code:</label>
            </div>
            <div class="col-5">
                <input asp-for="PostalCode" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 mt-5 offset-2">
                <partial name="_DeleteAndBackToListButton" model="Model.Id" />
            </div>
        </div>
    </div>
</form>
