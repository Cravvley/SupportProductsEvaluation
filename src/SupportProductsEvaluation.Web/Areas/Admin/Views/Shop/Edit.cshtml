@model Shop

@{
    ViewData["Title"] = "Edit shop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h1 class="text-warning mb-5">Edit Shop</h1>
<br />

<form method="post" asp-action="Edit">
    @if (ViewBag.Exist)
    {
    <p class="text-danger text-uppercase font-weight-bolder">Shop is already exists.</p>
    }
<div class="text-info font-weight-bold">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Name" class="col-form-label">Shop name:</label>
        </div>
        <div class="col-5">
            <input asp-for="Name" class="form-control" />
        </div>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="City" class="col-form-label">Shop city location:</label>
        </div>
        <div class="col-5">
            <input asp-for="City" class="form-control" />
        </div>
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Country" class="col-form-label">Shop country location:</label>
        </div>
        <div class="col-5">
            <input asp-for="Country" class="form-control" />
        </div>
        <span asp-validation-for="Country" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="StreetAddress" class="col-form-label">Shop street location:</label>
        </div>
        <div class="col-5">
            <input asp-for="StreetAddress" class="form-control" />
        </div>
        <span asp-validation-for="StreetAddress" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="PostalCode" class="col-form-label">Shop postal code:</label>
        </div>
        <div class="col-5">
            <input asp-for="PostalCode" class="form-control" />
        </div>
        <span asp-validation-for="PostalCode" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <div class="col-5 offset-2">
            <partial name="_EditAndBackToListButton" model="Model.Id" />
        </div>
    </div>
</div>
</form>


@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}