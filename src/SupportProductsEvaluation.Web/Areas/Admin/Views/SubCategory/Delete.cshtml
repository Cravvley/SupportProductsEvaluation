@model SubCategory

@{
    ViewData["Title"] = "Delete subcategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h1 class="text-danger mb-5">Delete subcategory</h1>
<br />

<form method="post" asp-action="Delete">
    <div class="col-12 text-info font-weight-bold">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label">Subcategory name:</label>
            </div>
            <div class="col-5">
                <input asp-for="Name" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Category.Name" class="col-form-label">Subcategory parent:</label>
            </div>
            <div class="col-5">
                <input asp-for="Category.Name" disabled class="form-control" />
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-5 mt-5 offset-2">
            <partial name="_DeleteAndBackToListButton" model="Model.Id" />
        </div>
    </div>
</form>
