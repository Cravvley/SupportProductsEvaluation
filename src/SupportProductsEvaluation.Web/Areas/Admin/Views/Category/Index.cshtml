@model CategoryListVM

@{
    ViewData["Title"] = "Categories list";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<form method="get">
    <div class="border p-3">
        <div class="row p-1">
            <div class="col-6">
                <h2 class="text-info"> Categories List</h2>
            </div>
            <div class="col-6 text-right">
                <partial name="_CreateButtonPartial" />
            </div>
        </div>
        <br />
            <div class="row container">
                <div class="col-11">
                    <div class="row" style="padding-top:10px">
                        <div class="col-11">
                            @Html.Editor("searchName", new { htmlAttributes = new { @class = "form-control", @placeholder = "Name..." } })
                        </div>
                    </div>
                </div>
                <div class="col-1">
                    <div class="row" style="padding-top:10px;">
                        <button type="submit" name="submit" value="Search" class="btn btn-info form-control">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        <br />
        <br />
        <div class="p-1">
            @if (Model.Categories.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            @Html.DisplayNameFor(s => s.Categories[0].Name)
                        </th>
                        <th></th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model.Categories)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Name)
                            </td>
                            <td>
                                <partial name="_TableButtonPartial" model="item.Id" />
                            </td>
                        </tr>
                    }
                </table>
                <div page-model="@Model.PagingInfo" page-classes-enabled="true" page-class="btn border"
                     page-class-normal="btn btn-light" page-class-selected="btn btn-info active"
                     class="btn-group float-right "></div>
                <br />
            }
            else
            {
                <p>No categories exist...</p>
            }
        </div>
    </div>
</form>

