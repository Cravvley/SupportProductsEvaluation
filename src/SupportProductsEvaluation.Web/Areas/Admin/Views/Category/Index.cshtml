@model CategoryListVM

@{
    ViewData["Title"] = "Categories list";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<form method="get">
    <div class=" text-center">
        <h1 class="text-secondary"> Categories list</h1>
    </div>
    <br />
    <br />
    <div class="row container">
        <div class="col-11">
            <div class="row" style="padding-top:10px">
                <div class="col-11">
                    @Html.Editor("searchName", new { htmlAttributes = new { @class = "form-control", @placeholder = "Category name..." } })
                </div>
            </div>
        </div>
        <div class="col-1">
            <div class="row" style="padding-top:10px;">
                <button type="submit" name="submit" value="Search" class="btn btn-info form-control">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>
    </div>
    <br />
    <br />
    <div class="p-1">
        @if (Model.Categories.Count() > 0)
        {
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            Category Name
                        </th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                @foreach (var item in Model.Categories)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>
                        <td>
                            <partial name="_TableButtonWithoutDetailsPartial" model="item.Id" />
                        </td>
                    </tr>
                }
            </table>
            <div page-model="@Model.PagingInfo" page-classes-enabled="true" page-class="btn border"
                 page-class-normal="btn" page-class-selected="btn btn-info active"
                 class="btn-group btn-info float-right "></div>
            <br />
        }
        else
        {
            <p>No categories exist...</p>
        }
    </div>
    <br />
    <br />
    <div class="col-6 offset-6 text-right">
        <partial name="_CreateButtonPartial" />
    </div>
</form>

