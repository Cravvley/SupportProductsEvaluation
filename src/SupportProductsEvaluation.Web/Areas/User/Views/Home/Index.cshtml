@model ProductListVM

<br />
<br />

<form asp-action="Index" method="get">

    <div class="row container">
        @if (User.IsInRole(SupportProductsEvaluation.Infrastructure.Utility.SD.Admin) || User.IsInRole(SupportProductsEvaluation.Infrastructure.Utility.SD.User))
        {
            <a asp-action="Comparison" class="btn btn-outline-info form-control offset-7 col-2" style="margin-bottom:20px">
                Compare
            </a>
            <a asp-action="Reports" class="btn btn-outline-info offset-1 col-2" style="margin-bottom:20px">
                Reports
            </a>
        }
        <div class="col-11">
            <div class="row" style="padding-top:10px">
                <div class="col-6">
                    @Html.Editor("searchName", new { htmlAttributes = new { @class = "form-control", @placeholder = "Name..." } })
                </div>
                <div class="col-6">
                    @Html.Editor("searchCategoryName", new { htmlAttributes = new { @class = "form-control", @placeholder = "Category..." } })
                </div>
            </div>
        </div>
        <div class="col-1">
            <div class="row" style="padding-top:10px;">
                <button type="submit" name="submit" value="Search" class="btn btn-info form-control">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>
    </div>
    <br />
        @foreach (var product in Model.Products)
        {
            <div class="border border-info rounded col-12" style="margin-bottom:10px; margin-top:10px; padding:10px;">
                <div class="row">
                    <div class="col-md-3 col-sm-12">
                        @{
                            var base64 = Convert.ToBase64String(product.Picture);
                            var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                        }
                        <img src="@imgsrc" width="99%" style="border-radius:5px;border:1px solid #bbb9b9" />
                    </div>
                    <div class="col-md-9 col-sm-12 ">
                        <div class="row pr-3">
                            <div class="col-8">
                                <label class="text-primary" style="font-size:21px;color:maroon">@product.Name - @product.Shop.Name</label>
                            </div>
                            <div class="col-4 text-right" style="color:maroon">
                                <h4>$@product.Price</h4>
                            </div>
                        </div>
                        <div class="row col-12 text-justify d-none d-md-block">
                            <p>@Html.Raw(product.Description)</p>
                        </div>
                        @if (User.IsInRole(SupportProductsEvaluation.Infrastructure.Utility.SD.Admin) || User.IsInRole(SupportProductsEvaluation.Infrastructure.Utility.SD.User))
                        {
                            <div class="col-md-3 col-sm-12 offset-md-9 text-center " style="position:absolute;bottom:0;right:1%;">
                                <a asp-action="ProductDetails" class="btn btn-success form-control" asp-route-id="@product.Id">Details</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    <br />

    <div page-model="@Model.PagingInfo" page-classes-enabled="true" page-class="btn border"
         page-class-normal="btn btn-light" page-class-selected="btn btn-info active"
         class="btn-group float-right "></div>
    <br />
    <br />
</form>


