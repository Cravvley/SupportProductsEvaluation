@model ProductListVM

<br />
<br />

<form asp-action="Index" method="get">

    <div class="row container">
        @if (User.IsInRole(SupportProductsEvaluation.Infrastructure.Utility.SD.Admin) || User.IsInRole(SupportProductsEvaluation.Infrastructure.Utility.SD.User))
        {
            <a asp-action="Comparison" class="btn btn-outline-info form-control offset-7 col-2" style="margin-bottom:20px">
                Compare
            </a>
            <a asp-action="Reports" class="btn btn-outline-info offset-1 col-2" style="margin-bottom:20px">
                Reports
            </a>
        }
        <partial name="_SearchByProductAndByCategory" />
    </div>
    <div class="mt-4">
        @foreach (var product in Model.Products)
        {
            <div class="border border-info rounded col-12" style="margin-bottom:10px; margin-top:10px; padding:10px;">
                <div class="row">
                    <div class="col-md-3 col-6">
                        @{
                            var base64 = Convert.ToBase64String(product.Picture);
                            var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                        }
                        <img src="@imgsrc" width="60%" style="border-radius:5px;border:1px solid #bbb9b9" />
                    </div>
                    <div class="col-md-9  col-6 ">
                        <div class="row pr-3">
                            <div class="col-8">
                                <label class="text-primary" style="font-size:21px;color:maroon">@product.Name  w @product.Shop.Name</label>
                            </div>
                            <div class="col-4 text-right text-success">
                                <h4>@product.Price  &euro;</h4>
                            </div>
                        </div>
                        <div class="row col-12 text-justify d-none d-md-block">
                            <p>@Html.Raw(product.Description)</p>
                        </div>
                        @if (User.IsInRole(SupportProductsEvaluation.Infrastructure.Utility.SD.Admin) || User.IsInRole(SupportProductsEvaluation.Infrastructure.Utility.SD.User))
                        {
                            <div class="col-md-3 col-sm-12 offset-md-9 text-center " style="position:absolute;bottom:0;right:1%;">
                                <a asp-action="ProductDetails" class="btn btn-info form-control" asp-route-id="@product.Id">Details</a>
                            </div>
                        }
                    </div>
                </div>
            </div>

        }
    </div>
    <br />
    <partial name="_Pagination" model="@Model.PagingInfo" />
    <br />
</form>


