@model Category

@{
    ViewData["Title"] = "Edit category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h1 class="text-warning mb-5">Edit category</h1>
<br />

<form method="post" asp-action="Edit" >
    @if (ViewBag.Exist)
    {
        <p class="text-danger text-uppercase font-weight-bolder">category is already exists.</p>
    }
<div>
    <input type="hidden" asp-for="ParentCategoryId" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Name" class="col-form-label text-info font-weight-bold">Category name:</label>
        </div>
        <div class="col-5">
            <input asp-for="Name" class="form-control" />
        </div>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <div class="col-5 offset-2">
            <partial name="_EditAndBackToListButton" model="Model.Id" />
        </div>
    </div>
</div>
</form>


@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}