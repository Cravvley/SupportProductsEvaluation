@model ShopProposition
@{
    ViewData["Title"] = "Shop's details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h1 class="text-info mb-5">ShopProposition's Details</h1>
<br />
<div class="text-info font-weight-bold">
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="User.Email" class="col-form-label">User email:</label>
        </div>
        <div class="col-5">
            <input asp-for="User.Email" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Name" class="col-form-label">Shop name:</label>
        </div>
        <div class="col-5">
            <input asp-for="Name" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="City" class="col-form-label">Shop city location:</label>
        </div>
        <div class="col-5">
            <input asp-for="City" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Country" class="col-form-label">Shop country location:</label>
        </div>
        <div class="col-5">
            <input asp-for="Country" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="StreetAddress" class="col-form-label">Shop street location:</label>
        </div>
        <div class="col-5">
            <input asp-for="StreetAddress" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="PostalCode" class="col-form-label">Shop postal code:</label>
        </div>
        <div class="col-5">
            <input asp-for="PostalCode" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="AdditionalInformation" class="col-form-label">Additional Informations:</label>
        </div>
        <div class="col-5">
            <div class="border p-2">
                @Html.Raw(Model.AdditionalInformation)
            </div>
        </div>
    </div>
    
</div>
<div class="form-group row">
    <div class="offset-1 col-2 mt-3">
        <a asp-action="ShopPropositionAccept" asp-route-id="@Model.Id" class="btn btn-success form-control">Accept</a>
    </div>
    <div class="col-2 mt-3">
        <a asp-action="ShopPropositionDiscard" asp-route-id="@Model.Id" class="btn btn-danger form-control">Discard</a>
    </div>
    <div class="col-2 mt-3">
        <a asp-action="ShopPropositionList" class="btn btn-secondary form-control">Back to List</a>
    </div>
</div>
