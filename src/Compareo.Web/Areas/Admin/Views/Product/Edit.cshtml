@model Compareo.Infrastructure.VMs.ProductCreateEditVM
@using Compareo.Infrastructure.Extensions

@{
    ViewData["Title"] = "Edit product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h1 class="text-warning">Edit product</h1>
<br />

<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Product.Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Product.Name" disabled class="col-form-label font-weight-bold text-info">Product name:</label>
        </div>
        <div class="col-5">
            <input asp-for="Product.Name" disabled class="form-control" />
        </div>
        <span asp-validation-for="Product.Name" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Product.Description" class="col-form-label font-weight-bold text-info">Product description:</label>
        </div>
        <div class="col-5 ">
            @Html.TextAreaFor(m => m.Product.Description, new { @class = "form-control", @rows = 3 })
        </div>
        <span asp-validation-for="Product.Description" class="text-danger"></span>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Product.Price" class="col-form-label font-weight-bold text-info">Product price:</label>
        </div>
        <div class="col-5">
            <input asp-for="Product.Price" class="form-control " />
        </div>
        <span asp-validation-for="Product.Price" class="text-danger"></span>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Product.Picture" class="col-form-label font-weight-bold text-info">Product picture</label>
        </div>
        <div class="col-5">
            <input type="file" name="files" multiple class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Product.CategoryId" class="col-form-label font-weight-bold text-info">Product category:</label>
        </div>
        <div class="col-5">
            <input asp-for="@Model.Product.Name"  disabled id="CategoryId"  class="form-control" > 
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Product.ShopId" class="col-form-label font-weight-bold text-info">Product shop:</label>
        </div>
        <div class="col-5">
            <select asp-for="@Model.Product.ShopId" id="ShopId" disabled asp-items="Model.ShopList.ToSelectListItem(Model.Product.ShopId)" class="form-control"></select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-5 offset-2">
            <partial name="_EditAndBackToListButton" model="Model.Product.Id" />
        </div>
    </div>
</form>

@section Scripts{

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}