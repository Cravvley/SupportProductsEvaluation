@model ProductProposition

@{
    ViewData["Title"] = "Product's Details";
}


<br />
<h1 class="text-info text-center">Product Details</h1>
<br />

<div class="row">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="col-md-8">
        <div class="form-group row">
            <div class="col-md-4">
                <label asp-for="User.Email" class="text-info font-weight-bold">User email:</label>
            </div>
            <div class="col-md-8">
                <input asp-for="User.Email" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-4">
                <label asp-for="Name" class="text-info font-weight-bold">Product name</label>
            </div>
            <div class="col-md-8">
                <input asp-for="Name" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-4">
                <label asp-for="Description" class="text-info font-weight-bold">Product description</label>
            </div>
            <div class="col-md-8">
                <div class="border p-2">
                    @Html.Raw(Model.Description)
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-4">
                <label asp-for="Price" class="text-info font-weight-bold">Product price</label>
            </div>
            <div class="col-md-8">
                <input asp-for="Price" readonly class="form-control" />
            </div>

        </div>
        <div class="form-group row">
            <div class="col-md-4">
                <label asp-for="CategoryId" class="text-info font-weight-bold">Product category</label>
            </div>
            <div class="col-md-8">
                <input asp-for="Category.Name" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-4">
                <label asp-for="ShopId" class="text-info font-weight-bold">Shop name </label>
            </div>
            <div class="col-md-8">
                <input asp-for="Shop.Name" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-4">
                <label asp-for="Shop.Country" class="text-info font-weight-bold">Shop country </label>
            </div>
            <div class="col-md-8">
                <input asp-for="Shop.Country" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-4">
                <label asp-for="Shop.City" class="text-info font-weight-bold">Shop city </label>
            </div>
            <div class="col-md-8">
                <input asp-for="Shop.City" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-4">
                <label asp-for="Shop.StreetAddress" class="text-info font-weight-bold">Shop street address</label>
            </div>
            <div class="col-md-8">
                <input asp-for="Shop.StreetAddress" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-4">
                <label asp-for="Shop.PostalCode" class="text-info font-weight-bold">Shop postal code</label>
            </div>
            <div class="col-md-8">
                <input asp-for="Shop.PostalCode" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="AdditionalInformation" class="col-form-label">Additional Informations:</label>
            </div>
            <div class="col-5">
                <div class="border p-2">
                    @Html.Raw(Model.AdditionalInformation)
                </div>
            </div>
        </div>

    </div>
    <div class="col-md-3 offset-1 d-none d-md-block">
        @{
            var base64 = Convert.ToBase64String(Model.Picture);
            var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
        }
        <img src="@imgsrc" width="100%" style="border-radius:5px;border: 1px solid #bbb9b9;" />
    </div>
</div>
<br />
<div class="form-group row ">
    <div class="offset-1 col-2 mt-3">
        <a asp-action="ProductPropositionAccept" asp-route-id="@Model.Id" class="btn btn-success form-control">Accept</a>
    </div>
    <div class="col-2 mt-3">
        <a asp-action="ProductPropositionDiscard" asp-route-id="@Model.Id" class="btn btn-danger form-control">Discard</a>
    </div>
    <div class="col-2 mt-3">
        <a asp-action="ProductPropositionList" class="btn btn-secondary form-control">Back to List</a>
    </div>
</div>