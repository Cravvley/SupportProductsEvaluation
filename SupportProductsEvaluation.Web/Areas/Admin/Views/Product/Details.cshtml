    @model SupportProductsEvaluation.Infrastructure.DTOs.ProductDto

@{
    ViewData["Title"] = "Product's Details";
}


<br />
<h2 class="text-info">Product Details</h2>
<br />

<div class="col-8">
    <fieldset disabled>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Name" class="custom-label"></label>
            </div>
            <div class="col-8">
                <input asp-for="Name" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Description" class="custom-label"></label>
            </div>
            <div class="col-8">
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @rows = 3})
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Price" class="custom-label"></label>
            </div>
            <div class="col-8">
                <input asp-for="Price" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="CategoryId" class="custom-label"></label>
            </div>
            <div class="col-8">
                <input asp-for="Category.Name" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="SubCategoryId" class="custom-label"></label>
            </div>
            <div class="col-8">
                <input asp-for="SubCategory.Name" class="form-control" />
            </div>
        </div>
    </fieldset>
</div>
<div class="col-1"></div>
<div class="col-3">
    @{
        var base64 = Convert.ToBase64String(Model.Picture);
        var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
    }
    <img src="@imgsrc" width="100%" style="border-radius:5px;border:1px solid #bbb9b9;" />
</div>
<div class="col-8">
    <div class="col-8 offset-4">
        <partial name="_DetailsAndBackToListButton" model="Model.Id" />
    </div>
</div>
