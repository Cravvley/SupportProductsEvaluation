@model ShopListViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="border p-3">
    <div class="row p-1">
        <div class="col-6">
            <h2 class="text-info"> Shop's List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div class="p-1">
        @if (Model.Shops.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(s => s.Shops[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(s => s.Shops[0].City)
                    </th>
                    <th>
                        @Html.DisplayNameFor(s => s.Shops[0].PostalCode)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model.Shops)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.City)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.PostalCode)
                        </td>
                        <td>
                            <partial name="_TableButtonPartial" model="item.Id" />
                        </td>
                    </tr>
                }
            </table>
            <div page-model="@Model.PagingInfo" page-classes-enabled="true" page-class="btn border"
                 page-class-normal="btn btn-light" page-class-selected="btn btn-info active"
                 class="btn-group float-right "></div>
            <br />
        }
        else
        {
            <p>No shops exist...</p>
        }
    </div>
</div>

